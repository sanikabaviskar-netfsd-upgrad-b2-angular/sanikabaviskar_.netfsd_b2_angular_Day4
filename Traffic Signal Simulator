let signal = "yellow";
let message = "";

switch (signal) {
    case "red":
        message = "Stop";
        break;

    case "yellow":
        message = "Get Ready";
        break;

    case "green":
        message = "Go";
        break;

    default:
        message = "Invalid signal color";
}

console.log("Signal Color: " + signal);
console.log("Instruction: " + message);
